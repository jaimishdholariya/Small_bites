<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:weightSum="8"
    android:orientation="vertical"
    tools:context=".KajuGathiyaActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@drawable/kajugathiya1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"/>
    </FrameLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kaju Gathiya"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_weight="1"
        android:layout_margin="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kaju curry is a restaurant style delicious recipe of a creamy kaju butter masala with a rich, tangy, sweet flavorful gravy made with cashews, tomatoes, cream and spices"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_weight="4"
        android:textSize="20dp"
        android:layout_margin="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="349 â‚¹"
            android:textSize="30dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="2"
            android:backgroundTint="#F24E1E"
            app:cornerRadius="30dp"
            android:text="Check Out"
            android:textSize="20dp"/>

    </LinearLayout>





</LinearLayout>