<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:weightSum="8"
    android:orientation="vertical"
    tools:context=".UndhiyuActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@drawable/undheeyu1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"/>
    </FrameLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Undhiyu"
        android:textStyle="bold"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_margin="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Undhiyu is a Gujarati mixed vegetable dish that is a regional specialty of Surat, Gujarat, India. The veggies added in undhiyu are root veggies like purple yam (kand), regular yam, sweet potatoes and baby potatoes. The other veggies added are small brinjals, raw or ripe bananas, ivy gourds and Indian flat beans or surti papdi. Fresh pigeon peas (tuvar lilva) are also added."
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_weight="4"
        android:textSize="20dp"
        android:layout_margin="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="349 â‚¹"
            android:layout_weight="1"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_weight="2"
            android:layout_marginEnd="10dp"
            app:cornerRadius="30dp"
            android:text="Check Out"
            android:backgroundTint="#F24E1E"
            android:textSize="20dp"/>

    </LinearLayout>





</LinearLayout>